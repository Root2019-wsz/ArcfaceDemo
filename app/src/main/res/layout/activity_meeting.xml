<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#DCDCDC"
    android:gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/touxiang" />

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="wsz123"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginBottom="250dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chat_iv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/white"
            android:src="@mipmap/ic_xiaoxi"/>

        <ImageView
            android:id="@+id/luru_iv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:onClick="jumpToSingleImageActivity"
            android:background="@color/white"
            android:src="@mipmap/ic_rulu"/>

        <ImageView
            android:id="@+id/regin_iv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:onClick="jumpToFaceRecognizeActivity"
            android:background="@color/white"
            android:src="@mipmap/ic_shibie"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chat_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="聊天"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="13dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/luru_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="录入人脸"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="13dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/regin_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="人脸签到"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="13dp"
            android:background="@color/white" />

    </LinearLayout>

</LinearLayout>